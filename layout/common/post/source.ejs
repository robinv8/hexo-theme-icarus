<% if (post.source && post.source.length) { %>
<div class="article-origin">
    <% if(post.origin == 1){ %>
    <div style="background: #5cb85c;color: white;padding: 1px 5px;border-radius: 5px;">
        <span>原创</span>
    </div>
    <% }else { %>
    <div style="background: #f1a61a;color: white;padding: 1px 5px;border-radius: 5px;">
        <span>摘抄</span>
    </div>
    <% } %>
</div>
<% } %>