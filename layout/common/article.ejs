<article id="<%= post.layout %>-<%= post.slug %>"
         class="article <%= (detail ? 'post-detail' : '') %> article-type-<%= post.layout %> <%= (post.direction && post.direction.toLowerCase() === 'rtl' ? ' rtl' : '') %>"
         itemscope itemprop="blogPost">
    <div class="article-inner">
        <% if (post.banner) { %>
        <%- partial('post/banner') %>
        <% } %>
        <% if (post.link || post.title) { %>
        <header class="article-header">
            <%- partial('post/title', {class_name: 'article-title'}) %>
            <% if (post.layout != 'page') { %>
            <div class="article-meta">
                <%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
                <%- partial('post/category') %>
                <%- partial('post/tag') %>
                <% if(detail){ %>
                <div class="views-wrap" title="浏览人数">
                    <i class="fa fa-clock-o"></i>
                    <span class="leancloud_visitors"></span>
                </div>
                <% } %>
            </div>
            <% } %>
        </header>
        <% } %>
        <%- partial('post/gallery') %>
        <div class="article-entry" itemprop="articleBody">
            <% if (index && post.excerpt) { %>
            <p><%- post.excerpt %></p>
            <p class="article-more-link">
                <a href="<%- url_for(post.path) %>#more"><%= __('article.more') %></a>
            </p>
            <% } else { %>
            <% if (!index && post.toc) { %>
            <div id="toc" class="toc-article">
                <strong class="toc-title"><%= __('article.catalogue') %></strong>
                <%- toc(post.content) %>
            </div>
            <% } %>
            <%- post.content.substring(0,200) %>
            <% } %>
        </div>
        <footer class="article-footer">
            <%- partial('comment/counter', {post: post}) %>
        </footer>
    </div>
    <% if (!index) { %>
    <%- partial('post/nav') %>
    <% } %>
</article>

<% if (!index) { %>
<%- partial('comment/index') %>
<% } %>